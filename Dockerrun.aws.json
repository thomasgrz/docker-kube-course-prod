{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "tommygdev/multi-container-client-prod",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "tommygdev/multi-container-server-prod",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "tommygdev/multi-container-worker-prod",
            "hostname": "worker",
            "memory":128,
            "essential": false
        },
        {
            "name": "nginx",
            "image": "tommygdev/multi-container-nginx-prod",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}